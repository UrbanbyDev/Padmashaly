<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateMemberShipActivity"
    android:orientation="vertical"
    android:background="@color/bg">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_membership_create"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:title="@string/member_ship"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_newsdetails1"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_membership"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_prof"
                    app:riv_border_color="#DFDFDF"
                    app:riv_corner_radius="50dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/iv_membership"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/ic_baseline_camera_alt_24"/>


            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/are_you_belongs_to_hindu_religion"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="3dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp"
                android:layout_weight="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/hindu_radio_grp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/hindu_yes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/yes"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                        <RadioButton
                            android:id="@+id/hindu_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/no"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                    </RadioGroup>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Are you belong to Padmashaly caste ?"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="3dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp"
                android:layout_weight="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/caste_radio_grp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/caste_yes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/yes"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                        <RadioButton
                            android:id="@+id/caste_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/no"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                    </RadioGroup>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="3dp"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="0.5">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/membership_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/name"
                        android:inputType="text"

                        android:padding="10dp"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="3dp"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="0.5">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/membership_surname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/surname"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="0.5 ">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/membership_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/dob"
                        android:padding="10dp"
                        android:clickable="true"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="0.5">
                    <Spinner
                        android:id="@+id/membership_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:popupBackground="@color/bg"
                        android:entries="@array/gender_array"
                        android:spinnerMode="dropdown"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/membership_fathername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/fathername"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/marital_status"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="3dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp"
                android:layout_weight="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/marriage_radio_grp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/married"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/married"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                        <RadioButton
                            android:id="@+id/unmarried"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/un_married"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                    </RadioGroup>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ll_spouse_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="true">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/membership_spouse_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/spouse_name"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        app:cardCornerRadius="5dp"
                        app:cardUseCompatPadding="true"
                        android:layout_weight="0.5 ">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/membership_spouse_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="@string/dob"
                            android:padding="10dp"
                            android:clickable="true"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        app:cardCornerRadius="5dp"
                        app:cardUseCompatPadding="true"
                        android:layout_weight="0.5">
                        <Spinner
                            android:id="@+id/membership_spouse_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:popupBackground="@color/bg"
                            android:entries="@array/gender_array"
                            android:spinnerMode="dropdown"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/qualification"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <Spinner
                    android:id="@+id/membership_qualification_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:spinnerMode="dropdown"
                    android:entries="@array/qualification_array"
                    android:popupBackground="@color/bg"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/membership_qualification_others"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/specify_qualification"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/profession"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <Spinner
                    android:id="@+id/membership_profession_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:spinnerMode="dropdown"
                    android:entries="@array/occupation_array"
                    android:popupBackground="@color/bg"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_profession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                android:visibility="gone">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/membership_occupation_others"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/specify_profession"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/membership_housenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/housenumber"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/membership_wardnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/wardnumber"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/membership_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/city"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/membership_mandal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/mandal"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/membership_assembly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/assembly_constituency"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/membership_parliament"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/parliament_constituency"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/membership_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/district"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/membership_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/state"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/membership_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/country"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/rules_and_regulations"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:text="@string/rules_text"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <RelativeLayout
                android:id="@+id/rl_membership_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingTop="5dp">

                <cn.refactor.library.SmoothCheckBox
                    android:id="@+id/cb_membership_terms"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:color_checked="@color/white"
                    app:color_tick="@color/primary" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_toEndOf="@+id/cb_membership_terms"
                    android:text="@string/accept_all_terms_and_conditions_of_the_organisation"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/applicable_for"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <Spinner
                    android:id="@+id/membership_applicable_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:spinnerMode="dropdown"
                    android:entries="@array/applicable_array"
                    android:popupBackground="@color/bg"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/membership_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/amount_to_be_paid"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/membership_reference_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/reference_mobile_number"
                    android:inputType="number"
                    android:padding="10dp"
                    android:maxLength="10"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/payment_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/black"
                android:text="@string/payment_completed"
                android:textSize="12sp"
                android:visibility="gone"/>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_membership_submit"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/submit"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>